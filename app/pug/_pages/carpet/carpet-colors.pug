section.carpet-colors
  .container
    h2.title.title--carpet-colors
      | Цветовые решения для
      br
      | борцовых покрышек
    ul.card-list.card-list--carpet-colors
      each item, index in colors
        li.card-list__item
          .card.card--bg
            figure.card-media
              .card-media__content
                img(src=item.image, alt="")
            .card__foot
              img(src="img/general/card-logo.png", alt="")
          .card-list__item-foot
            span.card-list__item-title!= item.title

    h3.title.title--carpet-colors
      | Эксклюзивные цвета
    ul.card-list.card-list--carpet-colors
      each item, index in exclusive
        if index !== 9
          li.card-list__item
            .card.card--bg
              figure.card-media
                .card-media__content
                  img(src=item.image, alt="")
              .card__foot
                img(src="img/general/card-logo.png", alt="")
            .card-list__item-foot
              span.card-list__item-title!= item.title
        else
          li.card-list__item.card-list__item--double
            .card.card--bg
              figure.card-media
                .card-media__content
                  img(src=item.image, alt="")
              .card__foot
                img(src="img/general/card-logo.png", alt="")
            .card-list__item-foot
              span.card-list__item-title!= item.title